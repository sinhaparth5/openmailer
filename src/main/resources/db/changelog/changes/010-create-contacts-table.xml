<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="010-create-contacts-table" author="openmailer">
        <createTable tableName="contacts">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_contacts_user" references="users(id)"
                             deleteCascade="true"/>
            </column>

            <!-- Basic info -->
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="last_name" type="VARCHAR(255)"/>

            <!-- Status tracking -->
            <column name="status" type="VARCHAR(50)" defaultValue="PENDING">
                <constraints nullable="false"/>
            </column>
            <column name="email_verified" type="BOOLEAN" defaultValueBoolean="false"/>

            <!-- Double opt-in -->
            <column name="confirmation_token" type="VARCHAR(255)">
                <constraints unique="true"/>
            </column>
            <column name="confirmation_sent_at" type="TIMESTAMP"/>
            <column name="confirmed_at" type="TIMESTAMP"/>

            <!-- Unsubscribe -->
            <column name="unsubscribe_token" type="VARCHAR(255)">
                <constraints unique="true"/>
            </column>
            <column name="unsubscribed_at" type="TIMESTAMP"/>
            <column name="unsubscribe_reason" type="TEXT"/>

            <!-- Bounce tracking -->
            <column name="bounce_count" type="INT" defaultValueNumeric="0"/>
            <column name="last_bounce_at" type="TIMESTAMP"/>
            <column name="bounce_type" type="VARCHAR(50)"/>

            <!-- Complaint tracking -->
            <column name="complaint_count" type="INT" defaultValueNumeric="0"/>
            <column name="last_complaint_at" type="TIMESTAMP"/>

            <!-- Flexible custom fields (JSON) -->
            <column name="custom_fields" type="JSONB"/>

            <!-- GDPR compliance -->
            <column name="gdpr_consent" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="gdpr_consent_date" type="TIMESTAMP"/>
            <column name="gdpr_ip_address" type="VARCHAR(45)"/>

            <!-- Metadata -->
            <column name="source" type="VARCHAR(100)"/>
            <column name="tags" type="TEXT[]"/>

            <!-- Timestamps -->
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Indexes -->
        <createIndex indexName="idx_contacts_user_id" tableName="contacts">
            <column name="user_id"/>
        </createIndex>

        <createIndex indexName="idx_contacts_email" tableName="contacts">
            <column name="email"/>
        </createIndex>

        <createIndex indexName="idx_contacts_status" tableName="contacts">
            <column name="status"/>
        </createIndex>

        <!-- GIN indexes for arrays and JSONB -->
        <sql>
            CREATE INDEX idx_contacts_tags ON contacts USING GIN(tags);
        </sql>

        <sql>
            CREATE INDEX idx_contacts_custom_fields ON contacts USING GIN(custom_fields);
        </sql>

        <!-- Unique constraint for contact email per user -->
        <addUniqueConstraint tableName="contacts"
                           columnNames="user_id, email"
                           constraintName="unique_contact_per_user"/>
    </changeSet>

</databaseChangeLog>
