<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="018-create-email-logs-table" author="openmailer">
        <createTable tableName="email_logs">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_email_logs_user" references="users(id)"
                             onDelete="CASCADE"/>
            </column>

            <column name="campaign_id" type="BIGINT">
                <constraints foreignKeyName="fk_email_logs_campaign" references="email_campaigns(id)"
                             onDelete="SET NULL"/>
            </column>

            <column name="recipient_id" type="BIGINT">
                <constraints foreignKeyName="fk_email_logs_recipient" references="campaign_recipients(id)"
                             onDelete="SET NULL"/>
            </column>

            <column name="provider_id" type="BIGINT">
                <constraints foreignKeyName="fk_email_logs_provider" references="email_providers(id)"
                             onDelete="SET NULL"/>
            </column>

            <column name="email_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="recipient_email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="subject" type="VARCHAR(500)"/>

            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <!-- Provider response -->
            <column name="provider_message_id" type="VARCHAR(255)"/>
            <column name="error_message" type="TEXT"/>

            <column name="sent_at" type="TIMESTAMP"/>
            <column name="delivered_at" type="TIMESTAMP"/>

            <!-- Timestamps -->
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Indexes -->
        <createIndex indexName="idx_email_logs_user_id" tableName="email_logs">
            <column name="user_id"/>
        </createIndex>

        <createIndex indexName="idx_email_logs_campaign" tableName="email_logs">
            <column name="campaign_id"/>
        </createIndex>

        <createIndex indexName="idx_email_logs_status" tableName="email_logs">
            <column name="status"/>
        </createIndex>

        <createIndex indexName="idx_email_logs_created" tableName="email_logs">
            <column name="created_at"/>
        </createIndex>

        <createIndex indexName="idx_email_logs_provider_message" tableName="email_logs">
            <column name="provider_message_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
