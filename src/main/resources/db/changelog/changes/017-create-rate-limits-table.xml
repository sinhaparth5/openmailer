<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="017-create-rate-limits-table" author="openmailer">
        <createTable tableName="rate_limits">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_rate_limits_user" references="users(id)"
                             onDelete="CASCADE"/>
            </column>

            <column name="resource_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <!-- Time window -->
            <column name="window_start" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="window_end" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <!-- Counts -->
            <column name="request_count" type="INT" defaultValueNumeric="0"/>

            <column name="limit_value" type="INT">
                <constraints nullable="false"/>
            </column>

            <!-- Timestamps -->
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Indexes -->
        <createIndex indexName="idx_rate_limits_user_resource" tableName="rate_limits">
            <column name="user_id"/>
            <column name="resource_type"/>
            <column name="window_end"/>
        </createIndex>

        <!-- Unique constraint for rate limit window -->
        <addUniqueConstraint tableName="rate_limits"
                           columnNames="user_id, resource_type, window_start"
                           constraintName="unique_rate_limit_window"/>
    </changeSet>

</databaseChangeLog>
