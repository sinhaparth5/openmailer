<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="011-create-contact-list-memberships-table" author="openmailer">
        <createTable tableName="contact_list_memberships">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="contact_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_memberships_contact" references="contacts(id)"
                             deleteCascade="true"/>
            </column>

            <column name="list_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_memberships_list" references="contact_lists(id)"
                             deleteCascade="true"/>
            </column>

            <column name="status" type="VARCHAR(50)" defaultValue="ACTIVE"/>

            <column name="subscribed_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="unsubscribed_at" type="TIMESTAMP"/>

            <!-- Timestamps -->
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Indexes -->
        <createIndex indexName="idx_memberships_contact" tableName="contact_list_memberships">
            <column name="contact_id"/>
        </createIndex>

        <createIndex indexName="idx_memberships_list" tableName="contact_list_memberships">
            <column name="list_id"/>
        </createIndex>

        <createIndex indexName="idx_memberships_status" tableName="contact_list_memberships">
            <column name="status"/>
        </createIndex>

        <!-- Unique constraint for contact-list membership -->
        <addUniqueConstraint tableName="contact_list_memberships"
                           columnNames="contact_id, list_id"
                           constraintName="unique_contact_list_membership"/>
    </changeSet>

</databaseChangeLog>
