<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="012-create-segments-table" author="openmailer">
        <createTable tableName="segments">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_segments_user" references="users(id)"
                             deleteCascade="true"/>
            </column>

            <column name="list_id" type="BIGINT">
                <constraints foreignKeyName="fk_segments_list" references="contact_lists(id)"
                             deleteCascade="true"/>
            </column>

            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="TEXT"/>

            <!-- Segment conditions (JSON query) -->
            <column name="conditions" type="JSONB">
                <constraints nullable="false"/>
            </column>

            <column name="is_dynamic" type="BOOLEAN" defaultValueBoolean="true"/>

            <!-- Cached count for performance -->
            <column name="cached_count" type="INT" defaultValueNumeric="0"/>
            <column name="last_calculated_at" type="TIMESTAMP"/>

            <!-- Timestamps -->
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Indexes -->
        <createIndex indexName="idx_segments_user_id" tableName="segments">
            <column name="user_id"/>
        </createIndex>

        <createIndex indexName="idx_segments_list_id" tableName="segments">
            <column name="list_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
