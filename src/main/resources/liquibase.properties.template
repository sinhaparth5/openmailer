# Liquibase Properties Template
# Copy this file to liquibase.properties and fill in your database credentials

# Database connection
url=jdbc:postgresql://your-host:5432/your-database
username=your-username
password=your-password
driver=org.postgresql.Driver

# Changelog file
changeLogFile=src/main/resources/db/changelog/db.changelog-master.xml

# Output settings
outputDefaultSchema=false
outputDefaultCatalog=false

# Logging
verbose=true
